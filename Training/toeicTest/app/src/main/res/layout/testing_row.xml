<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/background_testing_list"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"


        >

        <TextView
            android:id="@+id/txtTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="50dp"
            android:text="TEST NAME"
            android:textColor="#fd6323ac"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            >
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center"

            >
            <TextView

                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Total"
                android:textSize="20sp"
                android:textColor="#ef9d51c7"
                />

            <TextView
                android:id="@+id/txtTestScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="750/990"
                android:textSize="18sp" />
        </LinearLayout>
            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:background="@drawable/border"
                    android:layout_margin="8dp"
                    android:paddingTop="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical"


                    >

                    <TextView
                        android:id="@+id/txtListening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Listening"
                        android:textColor="#ff6200"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtLScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="375"
                        android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:layout_margin="8dp"
                    android:paddingTop="2dp"

                    >

                    <TextView
                        android:id="@+id/txtReading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Reading"
                        android:textColor="#ff6200"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtRScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="375"
                        android:textSize="18sp" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>
